<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="12dp"
    android:background="@color/white">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_marginTop="80.2dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/logo2"/>

        <customfonts.MyTextView_SF_Pro_Display_Medium
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome Back!"
            android:textColor="#323643"
            android:textSize="21.3sp"/>

        <customfonts.MyTextView_SF_Pro_Display_Light
            android:layout_gravity="center"
            android:layout_marginTop="9.6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15.4sp"
            android:textColor="#606470"
            android:text="Login to continue using Motorcycle Assist"/>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="28.7dp"
            android:layout_marginRight="28.9dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/email"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:layout_marginLeft="28.7dp"
            android:layout_marginRight="28.9dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:id="@+id/password"
                />

        </com.google.android.material.textfield.TextInputLayout>






        <com.google.android.material.button.MaterialButton
            android:text="Login"
            android:backgroundTint="@color/colorPrimary"
            style="@style/Widget.MaterialComponents.Button"
            android:id="@+id/login"
            android:layout_gravity="bottom"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="50dp"
            android:layout_marginLeft="28.7dp"
            android:layout_marginRight="28.9dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal">


        <customfonts.MyTextView_SF_Pro_Display_Light
            android:layout_gravity="center"
            android:textSize="15.4dp"
            android:textColor="#606470"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New User?" />

        <customfonts.MyTextView_SF_Pro_Display_Medium
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15.4sp"
            android:textColor="#3277d8"
            android:onClick="onClick"
            android:id="@+id/register"
            android:text="Sign up for a new account" />

    </LinearLayout>
</RelativeLayout>
